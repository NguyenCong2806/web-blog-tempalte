<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    
    <div class="text-center mb-12" data-aos="fade-up">
      <h2 class="text-3xl md:text-4xl font-bold text-teal-800 uppercase tracking-wide">
        Đội ngũ Chuyên gia & Giảng viên
      </h2>
      <div class="mt-3 h-1.5 w-24 bg-teal-500 mx-auto rounded-full"></div>
      <p class="mt-4 text-gray-600 max-w-2xl mx-auto">
        Được dẫn dắt bởi những chuyên gia đầu ngành với nhiều năm kinh nghiệm thực chiến và giảng dạy.
      </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      
      <% if (typeof experts !== 'undefined' && experts.length > 0) { %>
        <% 
           // Sắp xếp theo location (thứ tự ưu tiên)
           experts.sort((a, b) => (a.location || 999) - (b.location || 999));
        %>

        <% experts.forEach(function(item) { %>
          
          <div class="group relative bg-white rounded-xl shadow-sm hover:shadow-2xl transition-all duration-300 border border-gray-100 overflow-hidden text-center p-6" data-aos="fade-up">
            
            <% if (item.site) { %>
              <div class="absolute top-0 right-0 bg-teal-600 text-white text-[10px] font-bold px-3 py-1 rounded-bl-xl uppercase tracking-wider z-10">
                <%= item.site %>
              </div>
            <% } %>

            <div class="relative w-32 h-32 mx-auto mb-6">
              <div class="w-full h-full rounded-full p-1 border-2 border-teal-100 group-hover:border-teal-500 transition-colors duration-300">
                <img 
                  src="<%= item.img || '/images/avatars/default-expert.png' %>" 
                  alt="<%= item.title %>" 
                  class="w-full h-full rounded-full object-cover"
                  loading="lazy"
                >
              </div>
              
              <% if (item.icon) { %>
                <div class="absolute bottom-0 right-0 w-10 h-10 bg-white rounded-full shadow-md flex items-center justify-center border border-gray-200 group-hover:bg-teal-600 transition-colors duration-300">
                  <img 
                    src="<%= item.icon %>" 
                    alt="icon" 
                    class="w-5 h-5 object-contain group-hover:filter group-hover:brightness-0 group-hover:invert transition-all"
                  >
                </div>
              <% } %>
            </div>

            <h3 class="text-lg font-bold text-gray-900 mb-2 group-hover:text-teal-700 transition-colors">
              <%= item.title %>
            </h3>

            <% if (item.detail) { %>
              <p class="text-sm text-gray-500 leading-relaxed mb-6 line-clamp-3 min-h-[60px]">
                <%= item.detail %>
              </p>
            <% } %>

            <% if (item.link) { %>
              <div class="pt-4 border-t border-gray-100">
                <a href="<%= item.link %>" class="inline-flex items-center text-sm font-semibold text-teal-600 hover:text-teal-800 transition-colors gap-2 group/link">
                  Xem hồ sơ năng lực
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transform group-hover/link:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                  </svg>
                </a>
              </div>
            <% } %>

            <div class="absolute -bottom-10 -left-10 w-24 h-24 bg-teal-50 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-500 -z-10 blur-xl"></div>

          </div>

        <% }); %>
      <% } else { %>
        <p class="col-span-4 text-center text-gray-400">Đang cập nhật danh sách chuyên gia...</p>
      <% } %>

    </div>
  </div>
</section>
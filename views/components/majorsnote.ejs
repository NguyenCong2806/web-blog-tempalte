<section class="py-8">
  <div class="container mx-auto px-4">
    
    <% if (typeof majorsNotes !== 'undefined' && majorsNotes.length > 0) { %>
      <% 
         // Sắp xếp theo location
         majorsNotes.sort((a, b) => (a.location || 999) - (b.location || 999));
      %>

      <% majorsNotes.forEach(function(item) { %>
        
        <div class="relative bg-white border-l-4 border-teal-500 shadow-sm rounded-r-lg p-6 mb-6 last:mb-0 hover:shadow-md transition-shadow duration-300" data-aos="fade-up">
          
          <% if (item.site) { %>
            <div class="absolute top-4 right-4">
              <span class="inline-block px-2 py-1 text-[10px] font-bold text-teal-700 bg-teal-50 border border-teal-100 rounded uppercase tracking-wider">
                <%= item.site %>
              </span>
            </div>
          <% } %>

          <div class="flex flex-col md:flex-row gap-4 items-start">
            
            <div class="flex-shrink-0 mt-1 hidden md:block">
              <div class="w-8 h-8 rounded-full bg-teal-100 flex items-center justify-center text-teal-600">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
            </div>

            <div class="flex-grow">
              
              <% if (item.heading) { %>
                <h3 class="text-teal-800 mb-2 leading-tight">
                  <%= item.heading %>
                </h3>
              <% } %>

              <% if (item.note) { %>
                <div class="text-gray-600 text-sm md:text-base leading-relaxed text-justify">
                  <%- item.note.replace(/\n/g, '<br>') %>
                </div>
              <% } %>

            </div>
          </div>

        </div>

      <% }); %>
    <% } %>

  </div>
</section>
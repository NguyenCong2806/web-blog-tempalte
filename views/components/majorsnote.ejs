<section class="relative py-20 lg:py-28">
  <div class="container mx-auto px-4 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-10">
      <div class="lg:col-span-7">
        <div class="border rounded-xl p-8 bg-slate-200" data-aos="fade-up">
          <ul class="space-y-5">
            
            <% if (typeof majorsnotes !== 'undefined' && majorsnotes.length > 0) { %>
                <% majorsnotes.forEach(function(item) { %>
                   <% 
                      // 1. XỬ LÝ NỘI DUNG (Tách dòng HTML)
                      var lines = [];
                      if (item.note) {
                        lines = item.note
                            .replace(/<p>/g, '')
                            .split('</p>')
                            .map(line => line.trim())
                            .filter(line => line.length > 0);
                      }
                   %>

                   <% lines.forEach(function(line) { %>
                      <li class="flex items-start gap-4">
                        <div class="shrink-0 mt-1">
                          <i class="fa-solid fa-star text-orange-500 text-lg sm:text-xl drop-shadow-md"></i>
                        </div>
                        
                        <span class="text-base sm:text-lg font-medium leading-relaxed">
                          <%- line %>
                        </span>
                      </li>
                   <% }); %>

                <% }); %>
            <% } %>

          </ul>
        </div>

      </div>

    </div>
  </div>
</section>
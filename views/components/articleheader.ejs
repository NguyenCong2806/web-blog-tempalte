<section>
    <div class="max-w-screen-2xl mx-auto px-4">

        <% if (typeof articleHeader !== 'undefined' && articleHeader) { %>
            
            <div class="mb-10 max-w-4xl mx-auto text-center">

                <% if (articleHeader.headingheader) { %>
                    <h1 data-aos="fade-up" data-aos-duration="800" class="text-3xl md:text-4xl font-bold text-slate-800 uppercase mb-3">
                        <%= articleHeader.headingheader %>
                    </h1>
                <% } %>

                <% if (articleHeader.headingbody) { %>
                    <p data-aos="fade-up" data-aos-delay="200" data-aos-duration="800" class="text-gray-500 text-base md:text-lg font-light leading-relaxed max-w-2xl mx-auto">
                        <%= articleHeader.headingbody %>
                    </p>
                <% } %>

            </div>

        <% } %>
    </div>
</section>
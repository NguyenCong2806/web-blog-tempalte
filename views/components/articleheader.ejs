<section class="py-8 bg-white">
    <div class="container mx-auto px-4">

        <% if (typeof articleHeaders !=='undefined' && articleHeaders.length> 0) { %>
            <% articleheaders.forEach(function(item) { %>

                <div class="mb-10 max-w-4xl mx-auto text-center relative group">

                    <% if (item.site) { %>
                        <span
                            class="inline-block px-3 py-1 mb-3 text-xs font-bold tracking-wider text-teal-700 uppercase bg-teal-50 rounded-full border border-teal-100">
                            <%= item.site %>
                        </span>
                        <% } %>

                            <% if (item.headingheader) { %>
                                <div
                                    class="text-sm md:text-base font-semibold text-teal-600 uppercase tracking-widest mb-2">
                                    <%= item.headingheader %>
                                </div>
                                <% } %>

                                    <% if (item.headingbody) { %>
                                        <h2 class="text-gray-900 mb-4 leading-tight">
                                            <%= item.headingbody %>
                                        </h2>
                                        <% } %>

                                            <% if (item.isdivider) { %>
                                                <div class="flex items-center justify-center w-full my-6">
                                                    <div
                                                        class="h-1 w-24 bg-gradient-to-r from-teal-400 to-blue-500 rounded-full">
                                                    </div>
                                                </div>
                                                <% } %>

                                                    <% if (item.headingfooter) { %>
                                                        <p
                                                            class="text-gray-600 text-base md:text-lg leading-relaxed max-w-2xl mx-auto">
                                                            <%= item.headingfooter %>
                                                        </p>
                                                        <% } %>

                </div>

                <% }); %>
                    <% } %>
    </div>
</section>
<section class="py-12 bg-white">
  <div class="container mx-auto px-4">

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

      <% if (typeof cards !=='undefined' && cards.length> 0) { %>
        <% cards.forEach(function(item, index) { %>
          <div class="bg-[#f4fbfc] border border-[#ccecf1] rounded-lg p-6 md:p-8 flex items-start gap-6 hover:shadow-lg transition-all duration-300 group" data-aos="<%= index % 2 === 0 ? 'fade-left' : 'fade-right' %>">

            <div class="shrink-0">
               <i class="<%= item.icon %> text-[#0e5c69] transition-transform duration-300 group-hover:scale-110" 
                  style="font-size: 70px; line-height: 1; color: darkolivegreen;">
               </i>
            </div>

            <div class="flex-1 min-w-0">
              
              <% if (item.title) { %>
                <h3 class="text-xl md:text-2xl font-bold text-[#0e5c69] mb-3 leading-snug">
                  <%= item.title %>
                </h3>
              <% } %>

              <% if (item.detail) { %>
                <div class="text-slate-600 text-sm md:text-base leading-relaxed font-light [&>p]:mb-0">
                  <%- item.detail %>
                </div>
              <% } %>
              
            </div>

          </div>

        <% }); %>
      <% } %>
    </div>
  </div>
</section>
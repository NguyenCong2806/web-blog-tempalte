<div class="w-full bg-slate-200">

    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12 md:py-16 lg:py-20 text-center">
            <section>
                <%- include('./articleheader.ejs',{articleHeader: articleHeadercardnumbers}) %>
            </section>
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 sm:gap-8 md:gap-12">
            <% const items = cardnumbers %>

            <% items.forEach(function(item) { %>
                <div class="flex flex-col items-center justify-center group relative p-3 transition-transform duration-500 hover:scale-105">
                    
                    <div class="counter text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-extrabold mb-3 sm:mb-4 drop-shadow-2xl transition-all duration-500 group-hover:text-orange-300"
                         style="color: #242d3b; line-height: 1; text-shadow: 0 4px 12px rgba(0,0,0,0.3);"
                         data-target="<%= item.end || item.count || 0 %>" 
                         data-suffix="<%= item.suffix || '' %>"
                         data-prefix="<%= item.prefix || '' %>">
                        0
                    </div>
                    
                    <div class="text-xs sm:text-sm md:text-base lg:text-lg font-bold uppercase tracking-widest border-t-2 pt-3 sm:pt-4 mt-2 sm:mt-3 transition-colors duration-300 group-hover:border-orange-300 group-hover:text-orange-300" 
                         style="color: #ff5722; border-color: #ff5722;">
                        <%= item.text || item.label || 'N/A' %>
                    </div>

                </div>
            <% }); %>
        </div>
    </div>
</div>

<script>
    (function(){
        const counters = document.querySelectorAll('.counter');

        const animateCounter = (counter) => {
            const target = +counter.getAttribute('data-target');
            const suffix = counter.getAttribute('data-suffix') || '';
            const prefix = counter.getAttribute('data-prefix') || '';
            
            const duration = 2500; 
            const stepTime = 20; 
            const steps = duration / stepTime;
            const increment = target / steps;
            
            let current = 0;
            const timer = setInterval(() => {
                current += increment;
                if (current >= target) {
                    counter.innerText = prefix + target.toLocaleString('en-US') + suffix;
                    clearInterval(timer);
                } else {
                    counter.innerText = prefix + Math.ceil(current).toLocaleString('en-US') + suffix;
                }
            }, stepTime);
        };

        if ('IntersectionObserver' in window) {
            const observer = new IntersectionObserver((entries, obs) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        animateCounter(entry.target);
                        obs.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.3 });

            counters.forEach(counter => observer.observe(counter));
        } else {
            counters.forEach(counter => animateCounter(counter));
        }
    })();
</script>
<div class="w-full" style="background: linear-gradient(135deg, #152e4d 0%, #1a4f66 100%); color: white;">

    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-16 md:py-20 lg:py-28 text-center">
        
        <h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold uppercase mb-4 sm:mb-6 tracking-wider drop-shadow-lg transition-all duration-500 hover:scale-105" style="color: #ffffff;">
            NHỮNG CON SỐ ẤN TƯỢNG
        </h2>
        <p class="text-base sm:text-lg md:text-xl max-w-3xl mx-auto mb-12 sm:mb-16 md:mb-20 lg:mb-28 font-light opacity-90 leading-relaxed" style="color: #e2e8f0;">
            Cùng xem những thành tựu nổi bật và sự phát triển không ngừng của chúng tôi trong suốt thời gian vừa qua
        </p>

        <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 sm:gap-12 md:gap-16 lg:gap-20">
            <% 
               const defaults = [
                    { text: 'Ngành học trực tuyến', end: 9, suffix: '+', prefix: '' },
                    { text: 'Khóa học', end: 2000, suffix: '%', prefix: '' },
                    { text: 'Sinh viên theo học', end: 10000, suffix: '%', prefix: '' }
               ];
               const items = (typeof cardnumbers !== 'undefined' && Array.isArray(cardnumbers) && cardnumbers.length) 
                    ? cardnumbers 
                    : defaults;
            %>

            <% items.forEach(function(item) { %>
                <div class="flex flex-col items-center justify-center group relative p-4 transition-transform duration-500 hover:scale-110">
                    
                    <div class="counter text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-extrabold mb-4 sm:mb-6 drop-shadow-2xl transition-all duration-500 group-hover:text-orange-300"
                         style="color: #ffffff; line-height: 1; text-shadow: 0 4px 12px rgba(0,0,0,0.3);"
                         data-target="<%= item.end || item.count || 0 %>" 
                         data-suffix="<%= item.suffix || '' %>"
                         data-prefix="<%= item.prefix || '' %>">
                        0
                    </div>
                    
                    <div class="text-base sm:text-lg md:text-xl lg:text-2xl font-bold uppercase tracking-widest border-t-2 pt-4 sm:pt-5 mt-2 sm:mt-3 transition-colors duration-300 group-hover:border-orange-300 group-hover:text-orange-300" 
                         style="color: #ff5722; border-color: #ff5722;">
                        <%= item.text || item.label || 'N/A' %>
                    </div>

                </div>
            <% }); %>
        </div>
    </div>
</div>

<script>
    (function(){
        const counters = document.querySelectorAll('.counter');

        const animateCounter = (counter) => {
            const target = +counter.getAttribute('data-target');
            const suffix = counter.getAttribute('data-suffix') || '';
            const prefix = counter.getAttribute('data-prefix') || '';
            
            const duration = 2500; 
            const stepTime = 20; 
            const steps = duration / stepTime;
            const increment = target / steps;
            
            let current = 0;
            const timer = setInterval(() => {
                current += increment;
                if (current >= target) {
                    counter.innerText = prefix + target.toLocaleString('en-US') + suffix;
                    clearInterval(timer);
                } else {
                    counter.innerText = prefix + Math.ceil(current).toLocaleString('en-US') + suffix;
                }
            }, stepTime);
        };

        if ('IntersectionObserver' in window) {
            const observer = new IntersectionObserver((entries, obs) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        animateCounter(entry.target);
                        obs.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.3 });

            counters.forEach(counter => observer.observe(counter));
        } else {
            counters.forEach(counter => animateCounter(counter));
        }
    })();
</script>
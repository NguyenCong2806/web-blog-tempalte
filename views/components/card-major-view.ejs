<div class="container mx-auto">
    <div class="flex flex-row flex-wrap">
        <% datamajor.forEach(function(item) { %>
            <div class="inline-block w-1/4 p-3 transition-all delay-150 duration-300 ease-in-out hover:-translate-y-4">
                <div class="shadow-2xl">
                    <div class="block h-60">
                        <img class="w-full h-full" src="<%= item.url %>" alt="anh dep" loading="lazy" />
                    </div>
                    <div class="p-5 text-justify h-44">
                        <h3 class="text-xl font-bold mb-2 h-1/5">
                            <%= item.title %>
                        </h3>
                        <div class="h-4/5">
                            <p class="line-clamp-4 text-slate-500 text-base">
                                <%= item.des %>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>
<button 
    id="scrollToTopBtn" 
    onclick="scrollToTop()"
    class="fixed bottom-8 right-8 z-50 w-12 h-12 rounded-full bg-white border-2 border-green-700 text-green-700 
           flex items-center justify-center shadow-lg cursor-pointer 
           opacity-0 invisible translate-y-10 transition-all duration-300 ease-in-out
           hover:bg-green-700 hover:text-white hover:-translate-y-1 hover:shadow-xl"
    aria-label="Lên đầu trang"
>
    <i class="fa-solid fa-arrow-up text-lg"></i>
</button>

<script>
    // Lấy thẻ button
    const scrollBtn = document.getElementById("scrollToTopBtn");

    // Hàm lắng nghe sự kiện cuộn chuột
    window.onscroll = function() {
        scrollFunction();
    };

    function scrollFunction() {
        // Nếu cuộn xuống hơn 300px thì hiện nút
        if (document.body.scrollTop > 300 || document.documentElement.scrollTop > 300) {
            scrollBtn.classList.remove("opacity-0", "invisible", "translate-y-10");
            scrollBtn.classList.add("opacity-100", "visible", "translate-y-0");
        } else {
            // Ngược lại thì ẩn nút đi
            scrollBtn.classList.add("opacity-0", "invisible", "translate-y-10");
            scrollBtn.classList.remove("opacity-100", "visible", "translate-y-0");
        }
    }

    // Hàm xử lý cuộn mượt lên đầu trang
    function scrollToTop() {
        window.scrollTo({
            top: 0,
            behavior: "smooth" // Hiệu ứng trượt mượt mà
        });
    }
</script>
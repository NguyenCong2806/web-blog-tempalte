<div class="container mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-6 items-start">

        <!-- Image column (right on large screens) -->
        <div class="lg:col-span-5">
            <div
                class="w-full h-56 sm:h-64 md:h-80 lg:h-full bg-gray-50 rounded-lg flex items-center justify-center overflow-hidden">
                <img src="/image/technicalsupport.jpg" alt="Phôi bằng Đại học Thái Nguyên"
                    class="w-full h-full object-contain md:object-cover" />
            </div>
        </div>
        <!-- Accordion column (left on large screens) -->
        <div class="lg:col-span-7">
            <div class="bg-white rounded-lg shadow-sm overflow-hidden divide-y divide-gray-100">
                <% const items=typeof accordions !=='undefined' && Array.isArray(accordions) ? accordions : [ {
                    title: 'Đối tượng tuyển sinh' ,
                    body: 'Nội dung chi tiết cho đối tượng tuyển sinh. Thông tin sẽ mô tả các nhóm đối tượng, điều kiện và các lưu ý cần thiết.'
                    , open: true }, { title: 'Hình thức tuyển sinh' ,
                    body: 'Mô tả các hình thức tuyển sinh: xét tuyển, thi tuyển, kết hợp, tuyển thẳng... cùng điều kiện và hồ sơ cần chuẩn bị.'
                    }, { title: 'Yêu cầu' , body: 'Các yêu cầu về bằng cấp, năng lực và các chứng nhận phụ trợ nếu có.'
                    }, { title: 'Lịch khai giảng' , body: 'Thông tin về lịch khai giảng các khóa và thời hạn nộp hồ sơ.'
                    }, { title: 'Nơi tiếp nhận hồ sơ' , body: 'Địa chỉ, email và các kênh tiếp nhận hồ sơ.' }, {
                    title: 'Văn bằng sau tốt nghiệp' ,
                    body: 'Thông tin về văn bằng, chứng chỉ và công nhận sau khi tốt nghiệp.' } ]; %>

                    <% items.forEach(function(item, idx) { %>
                        <details class="group" <%=item.open ? 'open' : '' %>>
                            <summary
                                class="flex w-full cursor-pointer items-center justify-between px-4 py-3 sm:py-4 text-base sm:text-lg font-medium text-secondary-900 group-open:text-primary-500 transition-colors bg-white group-open:bg-gray-50">
                                <span class="truncate">
                                    <%= item.title %>
                                </span>
                                <div class="ml-4 flex-shrink-0">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                        stroke-width="1.5" stroke="currentColor" class="block h-6 w-6 group-open:hidden"
                                        aria-hidden="true">
                                        <path stroke-linecap="round" stroke-linejoin="round"
                                            d="M12 4.5v15m7.5-7.5h-15" />
                                    </svg>
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                        stroke-width="1.5" stroke="currentColor" class="hidden h-6 w-6 group-open:block"
                                        aria-hidden="true">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 12h-15" />
                                    </svg>
                                </div>
                            </summary>
                            <div class="px-4 pb-4 text-sm sm:text-base text-secondary-500">
                                <%= item.body %>
                            </div>
                        </details>
                        <% }); %>
            </div>
        </div>
        <h1>Nguyễn Văn Công</h1>
        <div id="formio_form_iframe_container_b70c8bd7-84ed-4468-acc7-b47e9448e61d"
            class="formio_form_iframe_container"></div>
        <script src="https://form.sambala.net/th_formio/static/src/js/get_utm_url.js"></script>
        <script>GetForm("https://form.sambala.net/formio/public/form/new/b70c8bd7-84ed-4468-acc7-b47e9448e61d", "b70c8bd7-84ed-4468-acc7-b47e9448e61d") </script>
        <script src="https://form.sambala.net/formio/static/lib/iframe-resizer/iframeResizer.min.js"></script>
        <script> iFrameResize({ heightCalculationMethod: 'grow', }, '.formio_form_embed'); </script>
    </div>

</div>
<div class="mx-auto">
    <section class="bg-slate-700 dark:bg-gray-900 py-8 sm:py-12">
        <div class="max-w-screen-lg mx-auto text-center px-4 sm:px-6 lg:px-8">
            <h2 class="text-2xl sm:text-3xl md:text-4xl font-extrabold text-white dark:text-white">Trusted by developers</h2>
            <p class="mt-3 text-sm sm:text-base md:text-lg text-white dark:text-gray-400 max-w-2xl mx-auto">
                This package powers many production applications on many different hosting platforms.
            </p>
        </div>

        <div class="max-w-screen-lg mx-auto mt-10 px-4 sm:px-6 lg:px-8">
            <dl class="grid grid-cols-1 sm:grid-cols-3 gap-4 bg-transparent">
                <% const defaults = [
                    { label: 'Stars on GitHub', count: 4670, suffix: '+' },
                    { label: 'Downloads', count: 80000, suffix: '+' },
                    { label: 'Sponsors', count: 100, suffix: '+' }
                ];
                const items = (typeof counters !== 'undefined' && Array.isArray(counters) && counters.length) ? counters : defaults;
                items.forEach(function(item, idx) { %>
                    <div class="flex flex-col items-center p-6 bg-white dark:bg-gray-800 rounded-lg shadow">
                        <dd class="counter text-3xl sm:text-4xl md:text-5xl font-extrabold leading-none text-indigo-600 dark:text-indigo-100"
                            data-count="<%= item.count %>" data-suffix="<%= item.suffix || '' %>">0</dd>
                        <dt class="mt-2 text-sm sm:text-base font-medium text-gray-500 dark:text-gray-400"><%= item.label %></dt>
                    </div>
                <% }); %>
            </dl>
        </div>
    </section>

    <script>
        (function(){
            const counters = Array.from(document.querySelectorAll('.counter'));

            function animateElem(el, to, suffix, duration) {
                const start = performance.now();
                const from = 0;

                function step(now) {
                    const progress = Math.min((now - start) / duration, 1);
                    const value = Math.floor(progress * (to - from) + from);
                    el.textContent = value + (progress === 1 ? suffix : '');
                    if (progress < 1) requestAnimationFrame(step);
                }

                requestAnimationFrame(step);
            }

            function startAnimations() {
                counters.forEach((el, i) => {
                    const to = Number(el.getAttribute('data-count')) || 0;
                    const suffix = el.getAttribute('data-suffix') || '';
                    setTimeout(() => animateElem(el, to, suffix, 1200), i * 250);
                });
            }

            // Start when visible using IntersectionObserver if available
            if ('IntersectionObserver' in window) {
                const io = new IntersectionObserver((entries, obs) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            startAnimations();
                            obs.disconnect();
                        }
                    });
                }, { threshold: 0.2 });

                if (counters.length) io.observe(counters[0].closest('section') || counters[0]);
                else startAnimations();
            } else {
                startAnimations();
            }
        })();
    </script>
</div>
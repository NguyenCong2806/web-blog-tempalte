<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-16 md:py-20 lg:py-24">
  <div class="mb-12 sm:mb-14 md:mb-16 lg:mb-20">
    <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-3 sm:mb-4 transition-all duration-500 hover:text-teal-700">Danh sách tin tức</h1>
    <div class="h-1.5 w-24 sm:w-28 md:w-32 bg-gradient-to-r from-teal-500 to-teal-600 rounded-full shadow-md"></div>
  </div>
  
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 sm:gap-8 md:gap-10 mb-12 sm:mb-16 md:mb-20">
    <% newsItems.forEach((newsItem, index) => { %>
      <div data-aos="fade-up" data-aos-delay="<%= index * 100 %>">
        <%- include('./news-card.ejs', {newsItem}) %>
      </div>
    <% }); %>
  </div>

  <div class="mt-12 sm:mt-16">
    <%- include('./pagination.ejs') %>
  </div>
</div>
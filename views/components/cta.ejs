<% if (typeof ctas !== 'undefined' && ctas.length > 0) { %>
  <% ctas.forEach(function(item) { %>
    
    <% if (item.isshow) { %>

      <section class="py-12 relative overflow-hidden">
        
        <div class="absolute inset-0 bg-gradient-to-r from-teal-600 to-blue-700 transform skew-y-1 origin-bottom-left scale-110"></div>
        <div class="absolute inset-0 bg-black/10"></div> <div class="container mx-auto px-4 relative z-10 text-center">
          
          <% if (item.site) { %>
            <div class="mb-4 animate-bounce">
              <span class="inline-block px-3 py-1 text-xs font-bold text-teal-800 bg-teal-100 rounded-full uppercase tracking-wider shadow-lg">
                <%= item.site %>
              </span>
            </div>
          <% } %>

          <h2 class="text-2xl md:text-4xl font-bold text-white mb-8 leading-tight drop-shadow-md">
            <%= item.text || "Đăng ký tư vấn ngay hôm nay!" %>
          </h2>

          <% if (item.link) { %>
            <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
              <a 
                href="<%= item.link %>" 
                class="group relative inline-flex items-center justify-center px-8 py-4 text-lg font-bold text-teal-700 bg-white rounded-full overflow-hidden shadow-xl transition-transform duration-300 hover:scale-105 hover:shadow-2xl focus:outline-none focus:ring-4 focus:ring-teal-300"
              >
                <span class="absolute inset-0 w-full h-full bg-gradient-to-r from-gray-100 to-white opacity-0 group-hover:opacity-100 transition-opacity"></span>
                
                <span class="relative flex items-center gap-2">
                  <%= item.text || "Đăng ký ngay" %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                  </svg>
                </span>
              </a>
              
              <a href="tel:0912345678" class="inline-flex items-center text-white font-semibold hover:text-teal-100 transition-colors mt-4 sm:mt-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                Gọi tư vấn miễn phí
              </a>
            </div>
          <% } %>

        </div>
      </section>

    <% } %> <% }); %>
<% } %>
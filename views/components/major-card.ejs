<div class="container mx-auto">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        <% majorCards.forEach(function(card) { %>
            <div class="p-3 transition-transform duration-300 ease-in-out hover:-translate-y-2">
                <div class="shadow-2xl bg-white h-full flex flex-col overflow-hidden">
                    <div class="w-full h-44 md:h-52 lg:h-60">
                        <img class="w-full h-full object-cover" src="<%= card.url %>" alt="<%= card.title %>" loading="lazy" />
                    </div>
                    <div class="p-4 flex-1 flex flex-col">
                        <h3 class="text-lg md:text-xl font-bold mb-2">
                            <%= card.title %>
                        </h3>
                        <div class="flex-1">
                            <p class="line-clamp-4 text-slate-500 text-sm md:text-base">
                                <%= card.des %>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>
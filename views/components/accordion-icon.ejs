<div class="container mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 items-start">

        <div data-aos="flip-up" class="lg:col-span-5 order-1 lg:order-2">
            <div class="w-full rounded-2xl overflow-hidden shadow-lg border border-gray-100 relative z-10">
                <img src="/image/technicalsupport.jpg" alt="Phôi bằng Đại học Thái Nguyên"
                    class="w-full h-auto object-cover transform hover:scale-105 transition-transform duration-700" 
                    onerror="this.src='https://placehold.co/600x800?text=Certificate'"/>
            </div>
        </div>

        <div data-aos="flip-down" class="lg:col-span-7 order-2 lg:order-1">
            
            <% 
               // Dữ liệu mẫu khớp với ảnh bạn gửi
               const items = typeof accordions !== 'undefined' && Array.isArray(accordions) ? accordions : [ 
                { 
                    title: 'Sở hữu Bằng Đại học uy tín', 
                    body: 'Chương trình cấp bằng Cử nhân Đại học danh giá, được Bộ GD&ĐT công nhận, có giá trị vĩnh viễn và đủ điều kiện học lên Thạc sĩ, Tiến sĩ.', 
                    open: true, 
                    icon: 'fa-solid fa-school-flag' 
                }, 
                { 
                    title: 'Thời gian đào tạo', 
                    body: 'Thời gian học linh hoạt, rút ngắn nhờ cơ chế chuyển đổi tín chỉ. Phù hợp cho người đi làm bận rộn.', 
                    icon: 'fa-solid fa-calendar-days'
                }, 
                { 
                    title: 'Cố vấn học tập đồng hành trong suốt quá trình học', 
                    body: 'Mỗi sinh viên có một cố vấn học tập riêng hỗ trợ giải đáp thắc mắc 24/7, nhắc lịch thi và hỗ trợ thủ tục hành chính.', 
                    icon: 'fa-solid fa-truck-fast' // Icon xe tải giống ảnh mẫu
                } 
               ]; 
            %>

            <div class="space-y-4">
                <% items.forEach(function(item, idx) { %>
                    <% var isOpen = item.open || idx === 0; %>
                    
                    <details class="group bg-[#f0f9fa] rounded-lg overflow-hidden transition-all duration-300" <%= isOpen ? 'open' : '' %>>
                        
                        <summary class="flex items-center justify-between p-5 cursor-pointer list-none select-none hover:bg-teal-50 transition-colors [&::-webkit-details-marker]:hidden">
                            
                            <div class="flex items-center gap-4">
                                <div class="shrink-0 w-8 text-center">
                                    <% if (item.icon) { %>
                                        <i class="<%= item.icon %> text-xl text-[#a93333]"></i>
                                    <% } else { %>
                                        <i class="fa-solid fa-star text-xl text-[#a93333]"></i>
                                    <% } %>
                                </div>

                                <h3 class="text-base sm:text-lg font-bold text-teal-900 leading-snug">
                                    <%= item.title %>
                                </h3>
                            </div>

                            <div class="shrink-0 ml-4 transition-transform duration-300 group-open:rotate-180 text-[#a93333]">
                                <i class="fa-solid fa-chevron-down"></i>
                            </div>

                        </summary>

                        <div class="px-5 pb-5 pl-[4.5rem] text-slate-600 text-sm leading-relaxed border-t border-teal-100/50">
                            <%- item.body || item.detail %>
                        </div>

                    </details>
                <% }); %>
            </div>

        </div>
    </div>
</div>
<div class="w-full sticky top-0 z-[1000]">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3 sm:py-4">
    <div class="flex items-center justify-between">
      <div class="text-lg sm:text-xl font-bold navbar-brand pl-0 shrink-0 group">
        <a href="/" class="flex items-center">
          <div class="drop-shadow-sm group-hover:drop-shadow-md transition-all duration-300">
            <%- include('../components/logo-view.ejs', {logos: typeof logos !== 'undefined' ? logos : []}) %></div>
        </a>
      </div>

      <button id="nav-toggle" aria-controls="nav-menu" aria-expanded="false"
        class="md:hidden inline-flex items-center justify-center p-2.5 rounded-lg focus:outline-none text-gray-600 hover:bg-teal-50 hover:text-teal-600 transition-all duration-300 group">
        <svg class="h-6 w-6 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>

      <ul id="nav-menu" class="hidden md:flex md:justify-end md:gap-1 lg:gap-2 md:items-center font-semibold w-full md:w-auto mt-3 md:mt-0">
        
        <% 
          var safeMenus = (typeof menus !== 'undefined' && menus) ? menus : [];
          var parentMenus = safeMenus.filter(m => !m.parentId || m.parentId === "");
        %>

        <% parentMenus.forEach(function(menu) { %>
            <% 
               var menuId = menu.id || menu._id;
               var childMenus = [];
               if (menuId) {
                   childMenus = safeMenus.filter(m => m.parentId && (m.parentId == menuId));
               }

               var hasChildren = childMenus.length > 0;
               var isActive = (currentPath === menu.ariaLabel) || (hasChildren && currentPath.startsWith(menu.ariaLabel));
               
               var activeClass = "text-teal-600 font-bold border-b-2 border-teal-600 pb-1.5 drop-shadow-sm";
               var normalClass = "text-gray-700 font-semibold pb-1.5 border-b-2 border-transparent hover:text-teal-600 hover:border-teal-400 transition-all duration-300 ease-out group/nav";
            %>

            <% if (!hasChildren) { %>
                <li class="flex items-center h-full">
                  <a href="<%= menu.link %>" target="<%= menu.target || '_self' %>"
                     class="px-3 lg:px-4 py-2 rounded-none whitespace-nowrap flex items-center h-full text-sm lg:text-base <%= isActive ? activeClass : normalClass %>">
                     <%= menu.title ? menu.title.toUpperCase() : '' %>
                  </a>
                </li>

            <% } else { %>
                <li class="group/parent relative flex items-center h-full">
                  <div class="flex items-center space-x-1.5 px-3 lg:px-4 py-2 cursor-pointer h-full <%= isActive ? activeClass : normalClass %>">
                    
                    <a href="<%= hasChildren ? 'javascript:void(0)' : menu.link %>" 
                       target="<%= menu.target || '_self' %>" 
                       class="whitespace-nowrap cursor-default flex items-center text-sm lg:text-base">
                        <%= menu.title ? menu.title.toUpperCase() : '' %>
                    </a>
                    
                    <button class="inline-flex items-center p-0 transition-all duration-300" aria-expanded="false">
                      <svg class="h-4 w-4 transform transition-all duration-300 md:group-hover/parent:rotate-180 md:group-hover/parent:text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                      </svg>
                    </button>
                  </div>

                  <ul class="hidden md:block md:absolute md:w-64 md:top-full md:left-0 md:mt-0 md:invisible md:opacity-0 md:transform md:translate-y-3 md:transition-all md:duration-300 md:group-hover/parent:visible md:group-hover/parent:opacity-100 md:group-hover/parent:translate-y-0 md:bg-white md:rounded-2xl md:shadow-2xl md:z-50 md:border md:border-gray-100 overflow-hidden text-left">
                    <% childMenus.forEach(function(child, idx) { %>
                        <% 
                           var isChildActive = (currentPath === child.ariaLabel);
                           var childActive = "text-teal-700 font-bold bg-teal-50 border-l-4 border-teal-600";
                           var childNormal = "text-gray-700 hover:text-teal-600 hover:bg-teal-50 transition-all duration-300 group/child";
                        %>
                        <li class="border-b last:border-0 border-gray-100 hover:bg-teal-50/50">
                          <a href="<%= child.ariaLabel %>" target="<%= child.target || '_self' %>"
                             class="flex items-center px-5 py-3.5 text-sm font-semibold transition-all duration-300 <%= isChildActive ? childActive : childNormal %>">
                            <% if (isChildActive) { %>
                              <span class="inline-block w-1.5 h-1.5 rounded-full bg-teal-600 mr-3"></span>
                            <% } else { %>
                              <span class="inline-block w-1.5 h-1.5 rounded-full bg-gray-400 mr-3 group-hover/child:bg-teal-400 transition-colors"></span>
                            <% } %>
                            <%= child.title %>
                          </a>
                        </li>
                    <% }); %>
                  </ul>
                </li>
            <% } %>

        <% }); %>

      </ul>
    </div>
  </nav>
</div>

<div id="nav-overlay" class="hidden fixed inset-0 bg-black bg-opacity-40 z-[1040] md:hidden transition-opacity duration-300"></div>

<aside id="nav-panel" class="fixed inset-y-0 left-0 w-72 bg-white z-[1050] transform -translate-x-full transition-transform duration-300 shadow-2xl md:hidden overflow-hidden flex flex-col">
  
  <div class="p-4 sm:p-6 border-b border-gray-200 flex items-center justify-between flex-shrink-0 bg-gradient-to-r from-white to-gray-50">
    <div class="flex items-center space-x-3">
       <div class="h-10 w-auto overflow-hidden drop-shadow-sm">
          <%- include('../components/logo-view.ejs', {logos: typeof logos !== 'undefined' ? logos : []}) %>
       </div>
    </div>
    <button id="nav-close" aria-label="Close menu" class="p-2 text-gray-600 hover:bg-teal-50 hover:text-teal-600 rounded-lg transition-all duration-300 group hover:scale-110">
      <svg class="h-5 w-5 group-hover:rotate-90 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
  </div>

  <nav class="p-4 sm:p-6 overflow-y-auto flex-1">
    <ul class="space-y-1 text-gray-700 pb-10">
      
      <% parentMenus.forEach(function(menu) { %>
          <% 
             var menuId = menu.id || menu._id;
             var childMenus = [];
             if (menuId) {
                 childMenus = safeMenus.filter(m => m.parentId && (m.parentId == menuId));
             }

             var hasChildren = childMenus.length > 0;
             var isActive = (currentPath === menu.ariaLabel) || (hasChildren && currentPath.startsWith(menu.ariaLabel));
             
             var mActive = "text-teal-700 font-bold bg-gradient-to-r from-teal-50 to-blue-50 border-l-4 border-teal-600";
             var mNormal = "text-gray-700 font-semibold hover:text-teal-600 hover:bg-teal-50";
          %>

          <% if (!hasChildren) { %>
              <li>
                <a href="<%= menu.ariaLabel %>" target="<%= menu.target || '_self' %>"
                   class="block px-4 py-2.5 rounded-lg uppercase text-sm font-bold transition-all duration-300 <%= isActive ? mActive : mNormal %>">
                  <%= menu.title %>
                </a>
              </li>

          <% } else { %>
              <li>
                <div class="flex items-center justify-between px-4 py-2.5 rounded-lg cursor-pointer transition-all duration-300 <%= isActive ? mActive : mNormal %>"
                     onclick="const el = document.getElementById('sub-<%= menuId %>'); el.classList.toggle('hidden'); this.querySelector('svg').classList.toggle('rotate-180');">
                  
                  <a href="javascript:void(0)" class="uppercase font-bold text-sm pointer-events-none"><%= menu.title %></a>
                  
                  <button class="p-1.5 focus:outline-none hover:bg-teal-100 rounded transition-colors">
                    <svg class="h-4 w-4 transform transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                  </button>
                </div>

                <ul id="sub-<%= menuId %>" class="hidden mt-1 space-y-1 pl-2 border-l-2 border-teal-200 ml-2">
                  <% childMenus.forEach(function(child) { %>
                      <% 
                         var isChildActive = currentPath === child.ariaLabel;
                      %>
                      <li>
                        <a href="<%= child.ariaLabel %>" target="<%= child.target || '_self' %>"
                           class="block py-2.5 px-4 rounded-lg text-sm font-semibold transition-all duration-300 <%= isChildActive ? 'text-teal-700 bg-teal-50 font-bold' : 'text-gray-600 hover:text-teal-600 hover:bg-teal-50' %>">
                          <%= child.title %>
                        </a>
                      </li>
                  <% }); %>
                </ul>
              </li>
          <% } %>

      <% }); %>

    </ul>
  </nav>
</aside>
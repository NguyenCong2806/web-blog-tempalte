<style>
    /* 1. Xử lý Căn Giữa (align-center) */
    /* Dùng display: table để margin auto hoạt động chuẩn với figure */
    .prose figure.align-center {
        margin-left: auto;
        margin-right: auto;
        display: table; 
        clear: both;
    }

    /* 2. Xử lý Căn Trái (align-left) */
    .prose figure.align-left {
        float: left;
        margin-right: 1.5rem; /* Tạo khoảng cách với chữ bên phải */
        margin-bottom: 1rem;
        margin-top: 0.5rem;
        clear: left;
    }

    /* 3. Xử lý Căn Phải (align-right) */
    .prose figure.align-right {
        float: right;
        margin-left: 1.5rem; /* Tạo khoảng cách với chữ bên trái */
        margin-bottom: 1rem;
        margin-top: 0.5rem;
        clear: right;
    }

    /* 4. Fix lỗi ảnh bị méo hoặc quá to khi float */
    .prose figure.align-left img, 
    .prose figure.align-right img {
        max-width: 50vw; /* Giới hạn chiều rộng ảnh khi float để không chiếm hết màn hình */
    }

    /* 5. Căn chỉnh Caption (chú thích ảnh) */
    .prose figure figcaption {
        text-align: center;
        color: #1a3c6e;
        font-size: 0.875rem;
        font-style: italic;
        margin-top: 0.5rem;
    }
</style>
<div class="relative h-[350px] bg-gray-900 overflow-hidden group">
    <div class="absolute inset-0 bg-black/40 z-10"></div>
    <img src="<%= pageContent.thumbnail || 'https://images.unsplash.com/photo-1523050854058-8df90110c9f1?q=80' %>" 
         class="absolute inset-0 w-full h-full object-cover transition-transform duration-1000 group-hover:scale-105 opacity-60" 
         alt="<%= pageContent.heading %>">
    
    <div class="container mx-auto px-4 h-full flex flex-col justify-end pb-12 relative z-20">
        <span class="inline-block py-1 px-3 rounded bg-blue-600/90 text-white text-xs font-bold uppercase tracking-wider mb-4 w-fit backdrop-blur-sm">
            Chương trình đào tạo
        </span>
        <h1 class="text-3xl md:text-5xl font-extrabold text-white leading-tight drop-shadow-lg max-w-4xl">
            <%= pageContent.heading %>
        </h1>
        
        <div class="flex items-center text-gray-300 text-sm mt-4 gap-4">
             <span class="flex items-center"><i class="fa-regular fa-eye mr-2"></i> <%= pageContent.views || 0 %> lượt xem</span>
             <% if (pageContent.site) { %>
                <span class="flex items-center"><i class="fa-solid fa-globe mr-2"></i> <%= pageContent.site %></span>
             <% } %>
        </div>
    </div>
</div>
<div class="container mx-auto px-4 py-12 font-sans">
    <div class="flex flex-col lg:flex-row gap-12">
        
        <div class="lg:w-2/3">
            
            <% if (pageContent.metaDescription) { %>
                <div class="bg-white p-6 md:p-8 rounded-2xl shadow-sm border border-blue-100 mb-8 relative overflow-hidden">
                    <div class="absolute top-0 left-0 w-1 h-full bg-blue-600"></div>
                    <h2 class="text-xl font-bold text-blue-800 mb-4 flex items-center">
                        <i class="fa-solid fa-circle-info mr-2"></i> Giới thiệu chung
                    </h2>
                    <p class="text-gray-700 text-lg leading-relaxed text-justify">
                        <%= pageContent.metaDescription %>
                    </p>
                </div>
            <% } %>

            <%- include('../components/table-of-contents.ejs', { contentId: 'major-content' }) %>

            <article id="major-content" class="prose prose-lg max-w-none 
                prose-headings:text-blue-900 prose-headings:font-bold 
                prose-p:text-gray-700 prose-li:text-gray-700
                prose-img:rounded-xl prose-img:shadow-md
                prose-a:text-blue-600 hover:prose-a:text-blue-800">
                
                <% if (pageContent.content) { %>
                    <%- pageContent.content %>
                <% } else { %>
                    <div class="text-center py-10 bg-gray-50 rounded-xl border border-dashed border-gray-300">
                        <p class="text-gray-500">Nội dung chi tiết đang được cập nhật...</p>
                    </div>
                <% } %>

            </article>

            <% if (pageContent.metaKeywords) { %>
                <div class="mt-10 pt-6 border-t border-gray-100">
                    <div class="flex flex-wrap gap-2">
                        <% pageContent.metaKeywords.split(',').forEach(tag => { %>
                            <span class="px-3 py-1 bg-gray-100 text-gray-600 rounded-full text-sm hover:bg-blue-50 hover:text-blue-600 transition-colors cursor-pointer">
                                #<%= tag.trim() %>
                            </span>
                        <% }) %>
                    </div>
                </div>
            <% } %>
        </div>

        <div class="lg:w-1/3">
            <div class="sticky top-24 space-y-8">
                
                <div class="bg-white rounded-2xl shadow-xl border-t-4 border-blue-600 overflow-hidden">
                    <div class="p-6 bg-gradient-to-b from-blue-50 to-white">
                        <h3 class="text-xl font-bold text-gray-900 mb-2">Đăng ký tư vấn</h3>
                        <p class="text-sm text-gray-600 mb-6">Nhận lộ trình học và ưu đãi học phí cho ngành <strong><%= pageContent.heading %></strong></p>
                        
                        <form class="space-y-4">
                            <div>
                                <input type="text" placeholder="Họ và tên *" class="w-full px-4 py-3 bg-white border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all text-sm">
                            </div>
                            <div>
                                <input type="tel" placeholder="Số điện thoại *" class="w-full px-4 py-3 bg-white border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all text-sm">
                            </div>
                            <div>
                                <input type="email" placeholder="Email (nếu có)" class="w-full px-4 py-3 bg-white border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all text-sm">
                            </div>
                            <button class="w-full bg-red-600 hover:bg-red-700 text-white font-bold py-3.5 rounded-lg shadow-lg shadow-red-200 transition-all duration-300 uppercase text-sm tracking-wide transform hover:-translate-y-1">
                                Đăng ký ngay
                            </button>
                        </form>
                    </div>
                    <div class="bg-gray-50 px-6 py-3 text-xs text-center text-gray-500 border-t border-gray-100">
                        Cam kết bảo mật thông tin cá nhân
                    </div>
                </div>

                <div class="bg-blue-600 rounded-xl p-6 text-white shadow-lg">
                    <h3 class="font-bold text-lg mb-4 flex items-center"><i class="fa-solid fa-headset mr-2"></i> Hỗ trợ trực tuyến</h3>
                    <div class="space-y-3">
                        <a href="tel:0987654321" class="flex items-center p-3 bg-white/10 rounded-lg hover:bg-white/20 transition-colors">
                            <div class="w-8 h-8 rounded-full bg-white text-blue-600 flex items-center justify-center mr-3"><i class="fa-solid fa-phone"></i></div>
                            <div>
                                <div class="text-xs opacity-80">Hotline tư vấn</div>
                                <div class="font-bold">0987.654.321</div>
                            </div>
                        </a>
                         <a href="#" class="flex items-center p-3 bg-white/10 rounded-lg hover:bg-white/20 transition-colors">
                            <div class="w-8 h-8 rounded-full bg-white text-blue-600 flex items-center justify-center mr-3"><i class="fa-brands fa-zalo"></i></div>
                            <div>
                                <div class="text-xs opacity-80">Chat Zalo</div>
                                <div class="font-bold">Tư vấn tuyển sinh</div>
                            </div>
                        </a>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>